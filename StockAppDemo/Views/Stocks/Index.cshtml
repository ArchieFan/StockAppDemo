@model IEnumerable<StockAppDemo.Models.Stock>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosePrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Symbol">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Symbol">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Symbol">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
